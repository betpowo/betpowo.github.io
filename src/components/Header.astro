                var index = 0;
                for (const child of urln.children) {
                    index += 1;
                    if (index == urls.length - 1) {
                        var thing = child.firstElementChild as HTMLElement;
                        thing.innerHTML = thing.innerHTML.replace(" &gt; ", "");
