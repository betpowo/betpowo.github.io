                            thing.style.setProperty(
                                "color",
                                "var(--header-logo-color-1)",
                            );
                            thing.style.setProperty("font-weight", "900");
                        }
                    }
                }

                document
                    .getElementById("kill")
                    .style.setProperty("display", "inherit");
                _div.style.setProperty("opacity", "100%");
            }
