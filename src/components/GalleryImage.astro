---
import "../styles/global.css";
import ContactButton from "./ContactButton.astro";

const {
    link = undefined,
    data = '{ title: "???", desc: "no description provided... sigh......" }',
    name = "???",
    extension = "png",
} = Astro.props;
---

<style>
    .container {
        display: flex;
        align-items: start;
        margin: auto;
        justify-content: center;
        max-width: fit-content;
    }
</style>
<div
    class="sub-board container"
    x-data={data}
    style="text-align: left; width: fit-content;"
>
    <div>
        <a href={"/images/gallery/" + name + "." + extension} target="_blank">
            <img
                alt=""
                loading="lazy"
                src={"/images/gallery/" + name + "." + extension}
                style="
                display: grid;
                max-width: 400px;
                max-height: 400px;
                border-radius: 20px;
            "
            />
        </a>
    </div>
    <br />
    <div style="margin-left: 23px;">
        <h2 x-text="title" style="color: var(--col-bright);"></h2>
        <nobr style="display: flex; gap: 5px; align-items: center;">
            <span x-text="from" style="color: var(--col-light);"></span>
            {
                link[0]?.map((a) => (
                    <ContactButton
                        size="40"
                        image={a[0]}
                        name={a[0]}
                        link={a[1]}
                    />
                ))
            }
        </nobr>
        <hr style="background-color: var(--col-dark); width: 100%;" />
        <p id="description" x-html="desc"></p>
    </div>
</div>
<br />
