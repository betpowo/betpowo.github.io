---
import Page from "../components/Page.astro";
import "../styles/global.css";
---

<Page title="betopia is missing!" logo={false}>
	<div
		id="body"
		style="background-color: var(--col-dark); text-align: center;"
		x-data="{score:0}"
	>
		<div
			style="
		margin: 0;
		position: absolute;
		top: 50%;
		left: 50%;
		-ms-transform: translate(-50%, -50%);
		transform: translate(-50%, -50%);
		text-align: center;
		"
			x-data="{pats:0}"
		>
			<p x-show="pats > 0" x-text="'pats: ' + pats.toString()"></p>
			<p x-show="pats > 99" style="color: var(--col-main);">
				just... go back already
			</p>
			<div>
				<img
					src="/svgs/404.svg"
					width="500px"
					alt="404: not found! sorry..."
				/>
				<div
					style="background-color: rgba(0, 0, 0, 0%); width: 111px; height: 50px; translate: 0px -190px; margin-left: auto; margin-right: auto; margin-bottom: -12%; cursor: grab;"
					x-on:click="pats++; new Audio('/audio/squeak.mp3').play();"
				>
				</div>
			</div>
			<br />
			<br />
			this <span style="color: #f36;">directory</span> isn't real. go home
			<br /><br />
