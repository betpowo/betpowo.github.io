				opacity: 0;
				visibility: hidden;
			}

			@for $i from 1 through 10 {
				.board:nth-child(#{$i}n) {
					animation-delay: #{0.3 + ($i * 0.1)}s;
				}
			}

			@keyframes appear {
				0% {
					translate: 0px 30px;
				}
				1% {
					opacity: 1;
					visibility: visible;
				}
				100% {
					opacity: 1;
					visibility: visible;
					translate: 0px 0px;
				}
