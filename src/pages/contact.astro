<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>betopia's location</title>

		<meta content="contact - betopia" property="og:title" />
		<meta
			content="go scream at me or whatever you want. [more info on full page]"
			property="og:description"
		/>
		<meta content="/images/socials/disc.png" property="og:image" />
		<meta content="#6633ff" data-react-helmet="true" name="theme-color" />

		<style>
			.container {
				display: flex;
				align-items: baseline;
				margin: auto;
				justify-content: center;
			}
		</style>
	</head>
	<Header />
	<body>
		<div style="margin: 23px;">
			<div class="board">
				<h1><span style="font-weight: normal;">ðŸ“¨</span> contact</h1>
				<br />
				my real, totally not fake accounts
				<br />
				<br />
				<div class="sub-board" style=" max-width: fit-content;">
					{
						links.map((a) => (
							<div style="display: flex; gap: 10px; text-align: left; align-items: center;">
								<ContactButton
									image={a[2]}
									name={a[0]}
									link={getLink(a[1], true)}
								/>
								<div>
									<h2 style="color: var(--col-bright); margin: 0;">
