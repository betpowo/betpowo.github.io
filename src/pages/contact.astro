const links = [
	["bluesky", "bsky.app/profile/betpowo.skruyo.dev", "bsky"],
	["twitter", "twitter.com/betpowo", "twit"],
	["youtube", "youtube.com/c/Betopia_", "tube"],
	["github", "github.com/betpowo", "git"],
	["discord", "discord.gg/s5pdvMTFKY", "disc"],
	["art fight", "artfight.net/~betpowo", "art"],
	["straw!", "betpowo.straw.page", "straw"],
	["gamebanana", "gamebanana.com/members/1830099", "banana"],
	["game jolt", "gamejolt.com/@probablynotbetopia", "jolt"],
	["roblox (inactive)", "roblox.com/users/1758832943/profile", "rbl"],
	["tumblr (inactive)", "tumblr.com/betpowo", "tumb"],
	["steam", "steamcommunity.com/id/probablynotbetopia/", "steam"],
	["geometry dash", "gdbrowser.com/u/BetopiaGD", "gd"],
	["newgrounds", "betopiang.newgrounds.com", "ground"],
	["panzoid <3", "panzoid.com/users/im_a_piece_of_garbage", "panzoid"],
